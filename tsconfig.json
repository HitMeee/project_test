{
    "compilerOptions": {
      "module": "NodeNext",          // Node.js ES modules
      "target": "ES6",               // Modern JavaScript
      "baseUrl": "./src",
      "outDir": "./dist",
      "sourceMap": true,
      "esModuleInterop": true,       // Cho phép tương thích giữa CommonJS và ES6
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true
    },
    "include": ["src/**/*"]
  }
  